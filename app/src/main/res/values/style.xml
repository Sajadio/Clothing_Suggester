<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonClickButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/_48dp</item>
        <item name="android:layout_height">@dimen/_48dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:background">@drawable/ripple</item>
    </style>

    <style name="CommonTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_8dp</item>
        <item name="android:drawablePadding">@dimen/_4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:drawableTint">@color/text_secondary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CommonTextView.TextCard">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:layout_marginVertical">@dimen/_8dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="CommonRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>